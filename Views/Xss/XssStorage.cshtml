<h2 class="title">Cross-site Scripting (Storage)</h2>
<form asp-controller="Xss" asp-action="SaveStorage">
    <span>Comment:</span>
    <input name="comment" />
    <br />
    <button>Search</button>
    <br />
    <div>@ViewBag.Comment</div>
    <br />
    <h2>Search Results for "@Html.Raw(@ViewBag.Comment)"</h2>
    <br />
    <br />
    @foreach (var comment in ViewBag.Comments)
    {
      <h2>@Html.Raw(comment.Description)</h2>
    }
</form>